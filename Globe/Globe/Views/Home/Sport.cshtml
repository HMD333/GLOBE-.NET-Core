@model IEnumerable<Globe.Data.News>

@if (Model.Count() > 0)
{
    <div class="main_contant">
        <div class="title">Sport</div>
        @{
            foreach (var news in Model)
            {
                <div class="contant_card">
                    <form asp-action="Post" method="post">
                        <input type="hidden" name="ID" value=@news.Id>
                        <label for="img">
                            <button>
                                <img src="~/@news.Img_path">
                            </button>
                        </label>
                        <input type="submit" id="img" hidden>
                    </form>
                    <div class="text">
                        <div class="T_text">
                            <p>@news.Title</p>
                        </div>
                        <div class="ST_text">
                            <p>@(news.Sup_Title.Length > 100 ? news.Sup_Title.Substring(0, 100) : news.Sup_Title)...</p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
}
else
{
    <div>
        <div class="main_contant">
            <div class="title">Sport</div>
            <div class="ERORR">Sorry NO Resalt</div>
        </div>
    </div>
}


