@model IEnumerable<Globe.Data.News>

@if (Model.Count() > 0)
{
    <div class="main_contant">
        <div class="title">Politics</div>
        @{
            foreach (var news in Model)
            {
                <div class="contant_card">
                    <a asp-action="Post">
                        <img src="~/@news.Img_path">
                    </a>
                    <div class="text">
                        <div class="T_text">
                            <p>@news.Title</p>
                        </div>
                        <div class="ST_text">
                            <p>@news.Sup_Title</p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
}
else
{
    <div class="SARCH" id="SARCH">
        <div class="main_contant">
            <div class="title">Politics</div>
            <div class="ERORR">Sorry NO Resalt</div>
        </div>
    </div>
}


